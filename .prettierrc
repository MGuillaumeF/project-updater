{
    "arrowParens": "always",
    "bracketSpacing": true,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false,
    "printWidth": 80,
    "overrides": [
      {
        "files": ["*.ts"],
        "options": {
          "parser": "babel-ts"
        }
      },
      {
        "files": ["*.js"],
        "options": {
          "parser": "babel"
        }
      },
      {
        "files": "*.json",
        "options": {
          "parser": "json"
        }
      },
      {
        "files": "*.md",
        "options": {
          "parser": "markdown"
        }
      }
    ]
  }